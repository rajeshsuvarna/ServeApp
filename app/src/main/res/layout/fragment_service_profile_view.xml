<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:id="@+id/ban_pic"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:text="Service Request Details"
            android:textColor="@color/secondary_text"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:padding="7dp"
                android:text="Service title:"
                android:textColor="@color/textColorPrimary" />

            <TextView
                android:id="@+id/textview_your_service_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:padding="7dp"
                android:text=""
                android:textColor="@color/textColorPrimary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:padding="7dp"
                android:text="Service:"
                android:textColor="@color/textColorPrimary" />

            <TextView
                android:id="@+id/textview_your_service"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:padding="7dp"
                android:text=""
                android:textColor="@color/textColorPrimary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:padding="7dp"
                android:text="Sub Service:"
                android:textColor="@color/textColorPrimary" />

            <TextView
                android:id="@+id/textview_sub_service"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:padding="7dp"
                android:text=""
                android:textColor="@color/textColorPrimary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:padding="7dp"
                android:text="Service Description:"
                android:textColor="@color/textColorPrimary" />

            <TextView
                android:id="@+id/textview_service_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:padding="7dp"
                android:text=""
                android:textColor="@color/textColorPrimary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:padding="7dp"
                android:text="Minimum Service Price:"
                android:textColor="@color/textColorPrimary" />

            <TextView
                android:id="@+id/textview_min_service_price"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:padding="7dp"
                android:text=""
                android:textColor="@color/textColorPrimary" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:padding="7dp"
                    android:text="Address:"
                    android:textColor="@color/textColorPrimary" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">


                <TextView
                    android:id="@+id/textview_address"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:padding="7dp"
                    android:text=""
                    android:textColor="@color/textColorPrimary" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:padding="7dp"
                android:text="Your Website:"
                android:textColor="@color/textColorPrimary" />

            <TextView
                android:id="@+id/textview_your_website"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:padding="7dp"
                android:text=""
                android:textColor="@color/textColorPrimary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="3dp">

            <Button
                android:id="@+id/button_edit_my_service_profile"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@color/light_grey"
                android:text="Edit My Service Profile"
                android:textColor="@color/secondary_text" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>